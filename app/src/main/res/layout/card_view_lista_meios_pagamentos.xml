<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:id="@+id/cv_lista_pagamentos"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"
    android:focusableInTouchMode="false"
    android:foreground="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llContentMeiosPagamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|center"
        android:layout_margin="2dp">
        <TextView
            android:id="@+id/tvCobrancaFinalizacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:text="CobranÃ§a"
            android:textSize="18sp"
            android:textColor="@color/cinzaPrincipalTexto"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/tvValorPago"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:textAlignment="textEnd"
            android:text="( - ) X.XXX,XX"
            android:textSize="18sp"
            android:textColor="@color/cinzaPrincipalTexto"
            android:textStyle="normal"/>
    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.cardview.widget.CardView>