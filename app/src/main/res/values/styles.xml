<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ContainerComponentesLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    
    <style name="TituloLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="ContainerComponentesComandaFundo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@color/vermelhoSecundario</item>
        <item name="android:radius">20dp</item>
    </style>

    <style name="ContainerComponentesComanda">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">125dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:radius">20dp</item>
    </style>

    <style name="ContainerComponentesNumeroComanda">
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/borda_comanda</item>
        <item name="android:radius">20dp</item>
    </style>

    <style name="ContainerStatusComanda">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@drawable/borda_status_ocupado</item>
        <item name="android:alpha">.15</item>
        <item name="android:radius">20dp</item>
    </style>
</resources>